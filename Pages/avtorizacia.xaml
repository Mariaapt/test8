<Page x:Class="test8.Pages.avtorizacia"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:test8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="avtorizacia">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Авторизация" HorizontalAlignment="Center" FontSize="20"/>
            <WrapPanel>
                <TextBlock Text="Логин" FontSize="20" Width="80"/>
                <TextBox x:Name="Login" Width="200"/>
            </WrapPanel>
            <WrapPanel>
                <TextBlock Text="Пароль" FontSize="20" Width="80"/>
                <TextBox x:Name="Password" Width="200"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Center">
                <Button x:Name="Vhod" Content="Вход" FontSize="20" Click="Vhod_Click"/>
                <Button x:Name="Regist" Content="Регистрация" FontSize="20" Click="Regist_Click"/>
            </WrapPanel>
        </StackPanel>

    </Grid>
</Page>
