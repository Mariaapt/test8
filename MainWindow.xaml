<Window x:Class="test8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test8"
        mc:Ignorable="d"
        Title="ООО Test" Height="450" Width="800" MinHeight="450" MinWidth="800" WindowStartupLocation="CenterScreen" Icon="/Resources/school_logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FFE7FABF">
            <TextBlock Text="ООО Тест" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40"/>
            <Image HorizontalAlignment="Right" VerticalAlignment="Center" Width="80" Height="80" Source="/Resources/school_logo.png" Margin="0 0 20 0"/>
        </Grid>
        <Frame NavigationUIVisibility="Hidden" x:Name="MainFrame" Margin="10,110,10,10" Grid.RowSpan="2"/>
    </Grid>
</Window>
